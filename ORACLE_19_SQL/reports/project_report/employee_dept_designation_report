-- Department Wise Salary Range Report
SELECT 
    d.DEPARTMENT_NAME,
    CASE
        WHEN e.SALARY > 50000 THEN 'HIGH'
        WHEN e.SALARY BETWEEN 20000 AND 50000 THEN 'MEDIUM'
        ELSE 'LOW'
    END AS SALARY_RANGE,
    COUNT(*) AS TOTAL_EMP
FROM EMPLOYEES e
JOIN DEPARTMENTS d ON e.DEPARTMENT_ID = d.DEPARTMENT_ID
WHERE e.SALARY >= :P_MIN_SALARY
GROUP BY 
    d.DEPARTMENT_NAME,
    CASE
        WHEN e.SALARY > 50000 THEN 'HIGH'
        WHEN e.SALARY BETWEEN 20000 AND 50000 THEN 'MEDIUM'
        ELSE 'LOW'
    END
ORDER BY 
    d.DEPARTMENT_NAME,
    DECODE(
        CASE
            WHEN e.SALARY > 50000 THEN 'HIGH'
            WHEN e.SALARY BETWEEN 20000 AND 50000 THEN 'MEDIUM'
            ELSE 'LOW'
        END,
        'HIGH', 1,
        'MEDIUM', 2,
        'LOW', 3
    );
