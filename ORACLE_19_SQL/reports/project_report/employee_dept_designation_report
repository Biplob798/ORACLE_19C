-- EMPLOYEE DIRECTORY REPORT
Style: Tabular Report
Report Name: EMPLOYEE_DIRECTORY_REP

SQL:

SELECT 
    e.EMPLOYEE_ID,
    e.FIRST_NAME || ' ' || e.LAST_NAME AS FULL_NAME,
    d.DEPARTMENT_NAME,
    dg.DESIGNATION_NAME,
    e.CONTACT_NO,
    e.EMAIL,
    e.SALARY,
    e.EMPLOYEE_STATUS
FROM EMPLOYEES e
JOIN DEPARTMENTS d ON e.DEPARTMENT_ID = d.DEPARTMENT_ID
JOIN DESIGNATION dg ON e.DESIGNATION_ID = dg.DESIGNATION_ID
ORDER BY e.EMPLOYEE_ID;



-- DEPARTMENT → EMPLOYEE MASTER DETAIL REPORT

Style: Master Detail / Group Above
Report Name: DEPT_EMP_MASTER_DETAIL_REP

SQL:

SELECT 
    d.DEPARTMENT_NAME,
    e.EMPLOYEE_ID,
    e.FIRST_NAME || ' ' || e.LAST_NAME AS EMPLOYEE_NAME,
    e.SALARY,
    e.CONTACT_NO,
    e.EMAIL
FROM DEPARTMENTS d
LEFT JOIN EMPLOYEES e ON d.DEPARTMENT_ID = e.DEPARTMENT_ID
ORDER BY  e.EMPLOYEE_ID;
-- DEPARTMENT SUMMARY REPORT

Style: Group Above
Report Name: DEPARTMENT_SUMMARY_REP

SQL:

SELECT 
    DEPARTMENT_ID,
    DEPARTMENT_NAME,
    DESCRIPTION,
    STATUS,
    ACTION_USER,
    CREATED_DATE,
    UPDATED_DATE
FROM DEPARTMENTS
ORDER BY DEPARTMENT_NAME;




4️⃣ EMPLOYEE SALARY & AGE SUMMARY REPORT

Style: Summary Report
Report Name: EMPLOYEE_SALARY_AGE_SUMMARY_REP

SQL:

SELECT 
    e.EMPLOYEE_ID,
    e.FIRST_NAME || ' ' || e.LAST_NAME AS FULL_NAME,
    TRUNC(MONTHS_BETWEEN(SYSDATE, e.DATE_OF_BIRTH)/12) AS AGE,
    e.SALARY,
    d.DEPARTMENT_NAME,
    dg.DESIGNATION_NAME
FROM EMPLOYEES e
JOIN DEPARTMENTS d ON e.DEPARTMENT_ID = d.DEPARTMENT_ID
JOIN DESIGNATION dg ON e.DESIGNATION_ID = dg.DESIGNATION_ID
ORDER BY AGE DESC;