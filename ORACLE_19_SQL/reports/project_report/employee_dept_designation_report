-- EMPLOYEE DIRECTORY REPORT
Style: Tabular Report
Report Name: EMPLOYEE_DIRECTORY_REP

SQL:

SELECT 
    e.EMPLOYEE_ID,
    e.FIRST_NAME || ' ' || e.LAST_NAME AS FULL_NAME,
    d.DEPARTMENT_NAME,
    dg.DESIGNATION_NAME,
    e.CONTACT_NO,
    e.EMAIL,
    e.SALARY,
    e.EMPLOYEE_STATUS
FROM EMPLOYEES e
JOIN DEPARTMENTS d ON e.DEPARTMENT_ID = d.DEPARTMENT_ID
JOIN DESIGNATION dg ON e.DESIGNATION_ID = dg.DESIGNATION_ID
ORDER BY e.EMPLOYEE_ID;



-- DEPARTMENT → EMPLOYEE MASTER DETAIL REPORT

Style: Master Detail / Group Above
Report Name: DEPT_EMP_MASTER_DETAIL_REP

SQL:

SELECT 
    d.DEPARTMENT_NAME,
    e.EMPLOYEE_ID,
    e.FIRST_NAME || ' ' || e.LAST_NAME AS EMPLOYEE_NAME,
    e.SALARY,
    e.CONTACT_NO,
    e.EMAIL
FROM DEPARTMENTS d
LEFT JOIN EMPLOYEES e ON d.DEPARTMENT_ID = e.DEPARTMENT_ID
ORDER BY  e.EMPLOYEE_ID;


--“Last Year New Employees Report
--Group Above
SELECT 
    e.EMPLOYEE_ID,
    e.FIRST_NAME || ' ' || e.LAST_NAME AS EMPLOYEE_NAME,
    d.DEPARTMENT_NAME,
    ds.DESIGNATION_NAME,
    e.SALARY,
    e.JOIN_DATE,
    e.CONTACT_NO,
    e.EMAIL
FROM EMPLOYEES e
LEFT JOIN DEPARTMENTS d ON e.DEPARTMENT_ID = d.DEPARTMENT_ID
LEFT JOIN DESIGNATION ds ON e.DESIGNATION_ID = ds.DESIGNATION_ID
WHERE EXTRACT(YEAR FROM e.JOIN_DATE) = EXTRACT(YEAR FROM ADD_MONTHS(SYSDATE, -12))
ORDER BY d.DEPARTMENT_NAME, e.JOIN_DATE;

--Yearly Employee Joining Matrix Report

SELECT 
    d.DEPARTMENT_NAME,
    EXTRACT(YEAR FROM e.JOIN_DATE) AS JOIN_YEAR,
    COUNT(*) AS TOTAL_EMP
FROM EMPLOYEES e
JOIN DEPARTMENTS d 
    ON e.DEPARTMENT_ID = d.DEPARTMENT_ID
GROUP BY 
    d.DEPARTMENT_NAME,
    EXTRACT(YEAR FROM e.JOIN_DATE)
ORDER BY 
    EXTRACT(YEAR FROM e.JOIN_DATE) DESC, 
    d.DEPARTMENT_NAME;

