
-- A Procedure is a named PL/SQL block that performs a specific task.

-- Can take parameters (IN, OUT, IN OUT)

-- Can be called multiple times

-- Does not return a value (unlike Function, unless via OUT)

-- Procedure without parameters

CREATE OR REPLACE PROCEDURE greet_user
IS
BEGIN
    DBMS_OUTPUT.PUT_LINE('Hello, welcome to PL/SQL!');
END;
/

BEGIN
    greet_user;
END;
/

-- Procedure with IN parameter

CREATE OR REPLACE PROCEDURE greet_name(p_name IN VARCHAR2)
IS
BEGIN
    DBMS_OUTPUT.PUT_LINE('Hello, ' || p_name || '!');
END;
/

BEGIN
    greet_name('Biplob');
END;
/



-- Procedure with OUT parameter
CREATE OR REPLACE PROCEDURE get_square(
    p_num IN NUMBER,
    p_result OUT NUMBER
)
IS
BEGIN
    p_result := p_num * p_num;
END;
/


DECLARE
    v_sq NUMBER;
BEGIN
    get_square(5, v_sq);
    DBMS_OUTPUT.PUT_LINE('Square: ' || v_sq);
END;
/


-- Procedure with IN OUT parameter


CREATE OR REPLACE PROCEDURE increase_value(p_num IN OUT NUMBER)
IS
BEGIN
    p_num := p_num + 10;
END;
/

DECLARE
    v_num NUMBER := 20;
BEGIN
    increase_value(v_num);
    DBMS_OUTPUT.PUT_LINE('New Value: ' || v_num);
END;
/
