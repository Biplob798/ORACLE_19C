-- A Composite variable holds multiple values.

-- It groups related data together.

-- ypes of Composite Variables

-- RECORD

-- TABLE (Collection)

-- VARRAY

-- Nested Table


DECLARE
    TYPE emp_rec IS RECORD (
        id NUMBER,
        name VARCHAR2(50)
    );

    v_emp emp_rec;
BEGIN
    v_emp.id := 1;
    v_emp.name := 'Biplob';

    DBMS_OUTPUT.PUT_LINE(v_emp.name);
END;
/


DECLARE
    TYPE num_table IS TABLE OF NUMBER;
    v_numbers num_table := num_table(10,20,30);
BEGIN
    DBMS_OUTPUT.PUT_LINE(v_numbers(1));
END;
/

