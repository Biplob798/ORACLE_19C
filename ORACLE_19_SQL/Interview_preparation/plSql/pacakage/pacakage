select employee_id,last_name,salary,tax(salary)
from employees
where employee_id=100;


-- create PACKAGE 
1.specification
2.body


-- create specification of PACKAGE 

create or replace PACKAGE test_pkg 
is
PROCEDURE add_dept
(
    p_name varchar2,
    p_loc number
);
FUNCTION tax
(
    p_value in number
)
RETURN number;
END test_pkg;



-- create specification of PACKAGE 


CREATE or REPLACE PACKAGE BODY test_pkg
is
-- without create or replace
procedure add_dept
(
     p_name in varchar2,
    p_loc in number
)
is
BEGIN
insert into departments(department_id,department_name,location_id)
values (departments_seq.nextval,p_name,p_loc);
END add_dept;
-- without create or replace
FUNCTION tax
(p_value in number)
RETURN number
is
begin
RETURN(p_value*0.08);
end tax;
END test_pkg;
/

EXECUTE test_pkg.add_dept('TEST',1700)
SELECT test_pkg.tax(1000) AS tax_value FROM dual;
SELECT employee_id,last_name,salary,test_pkg.tax(salary)
FROM EMPLOYEES
WHERE employee_id=100;


-- CREATE PACKAGE WITHOUT BODY
CREATE OR REPLACE PACKAGE GOLOBAL_CONSTS 
IS
C_MILE_2_KILO CONSTANT NUMBER := 1.6093;
C_KILO_2_MILE CONSTANT NUMBER := 0.6214;
C_YARD_2_METER CONSTANT NUMBER := 0.9144;
C_METER_2_YARD CONSTANT NUMBER := 1.0936;
END GOLOBAL_CONSTS;
/

BEGIN
DBMS_OUTPUT.PUT_LINE('20 MILES = '||20* GOLOBAL_CONSTS.C_KILO_2_MILE||' KM');
END;
/


CREATE FUNCTION MTR2YRD(P_M NUMBER)
RETURN NUMBER
IS
BEGIN
RETURN(P_M* GOLOBAL_CONSTS.C_METER_2_YARD);
END MTR2YRD;
/

EXECUTE DBMS_OUTPUT.PUT_LINE(MTR2YRD(1))
-------------------------------------------------------------



CREATE OR REPLACE FUNCTION get_annual_salary (
    p_emp_id NUMBER
)
RETURN NUMBER
IS
    v_annual_salary NUMBER;
BEGIN
    SELECT salary * 12
    INTO v_annual_salary
    FROM employees
    WHERE employee_id = p_emp_id;

    RETURN v_annual_salary;
END;
/
SELECT get_annual_salary(100)
FROM dual;


SELECT employee_id,
       salary,
       get_annual_salary(employee_id) AS annual_salary
FROM employees;



-- procedure
CREATE OR REPLACE PROCEDURE increase_salary (
    p_emp_id   NUMBER,
    p_percent  NUMBER
)
IS
BEGIN
    UPDATE employees
    SET salary = salary + (salary * p_percent / 100)
    WHERE employee_id = p_emp_id;

    IF SQL%ROWCOUNT = 0 THEN
        DBMS_OUTPUT.PUT_LINE('Employee not found');
    ELSE
        DBMS_OUTPUT.PUT_LINE('Salary updated successfully');
    END IF;

END;
/




-- Using the EXECUTE command
BEGIN
    increase_salary(100, 10);
END;
/
SELECT employee_id, salary
FROM employees
WHERE employee_id = 100;

-----------------------------------------------

CREATE OR REPLACE PACKAGE emp_pkg
IS
    -- Function Declaration
    FUNCTION get_annual_salary (
        p_emp_id NUMBER
    ) RETURN NUMBER;

    -- Procedure Declaration
    PROCEDURE increase_salary (
        p_emp_id  NUMBER,
        p_percent NUMBER
    );

END emp_pkg;
/


CREATE OR REPLACE PACKAGE BODY emp_pkg
IS

    -- Function Definition
    FUNCTION get_annual_salary (
        p_emp_id NUMBER
    )
    RETURN NUMBER
    IS
        v_annual_salary NUMBER;
    BEGIN
        SELECT salary * 12
        INTO v_annual_salary
        FROM employees
        WHERE employee_id = p_emp_id;

        RETURN v_annual_salary;
    END get_annual_salary;


    -- Procedure Definition
    PROCEDURE increase_salary (
        p_emp_id  NUMBER,
        p_percent NUMBER
    )
    IS
    BEGIN
        UPDATE employees
        SET salary = salary + (salary * p_percent / 100)
        WHERE employee_id = p_emp_id;

        IF SQL%ROWCOUNT = 0 THEN
            DBMS_OUTPUT.PUT_LINE('Employee not found');
        ELSE
            DBMS_OUTPUT.PUT_LINE('Salary updated successfully');
        END IF;

    END increase_salary;

END emp_pkg;
/
SELECT emp_pkg.get_annual_salary(100)
FROM dual;

BEGIN
    emp_pkg.increase_salary(100, 10);
END;
/


SELECT employee_id,
       salary,
       emp_pkg.get_annual_salary(employee_id) AS annual_salary
FROM employees;


