-- Meaning

-- Used to pass value inside

-- Can modify it

-- Returns modified value


CREATE OR REPLACE PROCEDURE increase_value (
    p_num IN OUT NUMBER
)
IS
BEGIN
    p_num := p_num + 10;
END;
/

DECLARE
   v_num NUMBER := 20;
BEGIN
   increase_value(v_num);
   DBMS_OUTPUT.PUT_LINE('New value: ' || v_num);
END;
/



CREATE OR REPLACE PROCEDURE format_phone
  (p_phone_no IN OUT VARCHAR2) 
IS
BEGIN
  p_phone_no := '('  || SUBSTR(p_phone_no,1,3) ||
                ') ' || SUBSTR(p_phone_no,4,3) ||
                '-'  || SUBSTR(p_phone_no,7);
END format_phone;
/