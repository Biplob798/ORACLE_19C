
-- This matches multiple columns simultaneously. The values in the row must match the subquery's columns exactly as a pair.

-- Example: Find employees who have the same manager AND work in the same department as employee 174.


SELECT last_name, manager_id, department_id
FROM employees
WHERE (manager_id, department_id) IN (SELECT manager_id, department_id
                                      FROM employees
                                      WHERE employee_id = 174);

-- Display the details of the employees who are managed by the
-- same manager and work in the same department as the
-- employees with EMPLOYEE_ID 199 or 174.



SELECT employee_id, manager_id, department_id
FROM employees
WHERE (manager_id, department_id) IN

(SELECT manager_id, department_id
FROM employees
WHERE employee_id IN (174, 199))

AND employee_id NOT IN (174,199);