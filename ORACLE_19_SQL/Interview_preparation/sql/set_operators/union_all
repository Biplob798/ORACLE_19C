-- Rows from both queries, including all duplications
-- Display the jobs and departments of all current and previous 
-- -- employees

SELECT job_id, department_id
FROM   
employees
UNION ALL
SELECT job_id, department_id
FROM   
job_history
ORDER BY  job_id;



SELECT job_id,department_id
FROM     employees
UNION
SELECT job_id,department_id
FROM    retired_employees
ORDER BY job_id;

-- The preceding query returns 19 rows. This is because it eliminates all the duplicate rows.