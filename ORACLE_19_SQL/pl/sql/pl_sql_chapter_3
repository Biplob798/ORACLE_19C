
-- declaring pl/sql variables chapter_3


set  serveroutput on  --  for pl/sql run
declare
v_lname varchar2 (25);
begin
select last_name
into v_lname 
from employees
where employee_id=100;
dbms_output.put_line(v_lname);
end;
/


-- how to declare a variables
declare 
variable_name    constant  datatype () not null := default value;


-- examp

set serveroutput on
declare
v_number1 number (9);
v_number2 number (9);
begin
v_number1 :=12;
v_number2 :=13;
dbms_output.put_line('result : '||(v_number1-v_number2));
end;
/
set serveroutput on
declare
v_number1 number (9):=12;
v_number2 number (9):=13;
result number(9,2);
begin 
result:=(v_number1+v_number2);

dbms_output.put_line('result : '||(result));
end;
/
set serveroutput on


declare
v_number1 number (9):=&v_number1;
v_number2 number (9):=&v_number2;
result number(9,2);
begin 
result:=v_number1+v_number2;
dbms_output.put_line('result : '||(result));
end;
/


-- Bind variables
variable b_result number;
declare
v_add1 number := 12;
v_add2 number := 112;
begin
:b_result := v_add1+v_add2;
dbms_output.put_line('Result : ' || :b_result);
end;
/
Print b_result

-- Declare the bind variable first
VARIABLE b_result NUMBER;

-- PL/SQL block
DECLARE
    v_add1 NUMBER := 12;
    v_add2 NUMBER := 112;
BEGIN
    -- Assign value to bind variable using :=
    :b_result := v_add1 + v_add2;

    -- Print result using DBMS_OUTPUT
    DBMS_OUTPUT.PUT_LINE('Result : ' || :b_result);
END;
/



declare
v_fname varchar2 (50);
begin
select first_name into v_fname from employees 
where job_id ='ST_CLERK';
dbms_output.put_line(v_fname);
end;
/




begin
v_increse_salary number(9) := 500;
update employees 
set salary=salary+v_increse_salary
where job_id ='ST_CLERK';

end;
/


declare
V_FNAME VARCHAR2(50) := 'BIPLOB';
BEGIN
V_LNAME := 'HOSSIAN';
DBMS_OUTPUT.PUT_LINE(V_FNAME);
DBMS_OUTPUT.PUT_LINE(V_LNAME);
END;
DBMS_OUTPUT.PUT_LINE(V_FNAME);
/





declare
v_a number := 3;
v_b number := v_a+ 3;
v_c number := v_b+ 3;
begin

DBMS_OUTPUT.PUT_LINE( v_c);
end;
/


-- practice
declare
v_fname varchar2(20);
v_lname varchar2(15) default 'fernandez';
begin
DBMS_OUTPUT.PUT_LINE(v_fname || ' ' || v_lname);
end;
/

declare
v_today date default sysdate;
v_tomorrow v_today%TYPE;
begin
v_tomorrow := v_today + 1;
DBMS_OUTPUT.PUT_LINE('Hellow World');
DBMS_OUTPUT.PUT_LINE(v_today);
DBMS_OUTPUT.PUT_LINE(v_tomorrow);
end;
/


variable b_basic_percent number;
variable b_pf_percent number;
begin
:b_basic_percent :=45;
:b_pf_percent :=12;

end;
/
