declare
v_empno emp.employee_id%type :=176;
v_sal emp.salary%type;
begin
select round(salary/1000) into v_sal from emp
where employee_id =v_empno;
dbms_output.put_line('salary : ' || v_sal);
update emp 
set stars=rpad('*',v_sal,'*')
where employee_id=v_empno;
end;
/





















