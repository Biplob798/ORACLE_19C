-- step-1>
-- create a interactive report page with this sql query
SELECT d.department_number,
       d.department_name,
       e.employee_id,
       e.first_name || ' ' || e.last_name employee_name,
       TO_CHAR(e.join_date, 'DD-Mon-RRRR') hire_date,
       TO_CHAR(e.salary, '99,99,999.99') salary
FROM   employees e,
       departments d
WHERE  e.department_id = d.department_id
ORDER  BY d.department_number;

-- step-2>
-- now want to show my report in group above 
click action button>click control breaks>create a control break on department_number and department_name
-- step-3>
now we create a BI Publisherreport with same query
-- step-4>
SELECT d.department_number,
       d.department_name,
       e.employee_id,
       e.first_name || ' ' || e.last_name employee_name,
       TO_CHAR(e.join_date, 'DD-Mon-RRRR') hire_date,
       TO_CHAR(e.salary, '99,99,999.99') salary
FROM   employees e,
       departments d
WHERE  e.department_id = d.department_id
ORDER  BY d.department_number;
