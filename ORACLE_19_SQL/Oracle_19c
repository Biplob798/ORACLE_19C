   -- practice ____ 11

   create table dept (
                    id number (7) constraint department_id_pk primary key ,
                    name varchar2 (25)
   );


create table emp(
    id          number(7),
    last_name   varchar2(25),
    first_name  varchar2(25),
    dept_id     number(7),
    constraint emp_dept_id_fk foreign key (id) references dept (id)
);


alter table emp
add (commission number(2,2));

alter table emp
  2 modify (last_name varchar2(50));


alter table emp 
drop (first_name);
/
alter table emp 
drop column first_name;




alter table emp
set unused (dept_id);

alter table emp 
drop unused column;



